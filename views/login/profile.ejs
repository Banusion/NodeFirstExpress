<% include ../header %>

<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
    </div>
    <!-- show any messages that come back with authentication -->

    <form action="/profile" method="post"accept-charset="utf-8" class="form-horizontal" role="form">
        <div class="row">
            <!-- LOCAL INFORMATION -->
            <div class="col-sm-6">
                <div class="well">
                    <h3><span class="fa fa-user"></span> Local Account</h3>
                    <p><strong>
                        <label>Compte : </label>
                        <input type="text" class="form-control" name="email" id="email" value="<%= user.local.email %>" readonly=true>
                    </strong></p>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="well">
                    <h3><span class="fa fa-user"></span> Local Account Details</h3>
                    <div class="form-group">
                        <label>Pseudo : </label>
                        <input type="text" class="form-control" name="pseudo" id="pseudo" value="<%= user.local.pseudo %>">
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="well">
                    <h3><span class="fa fa-user"></span> Detail Account</h3>
                    <p><strong>
                        <label>Compte : </label>
                        <a href="/profile" class="btn btn-default"><span class="fa fa-user"></span> Profile Login</a>
                    </strong></p>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary btn-lg btn-block">Save</button>
    </form>
</div>

<% include ../footer %>